@model IEnumerable<R_TUT.Models.DOCUMENTOS>

@{
    ViewData["Title"] = "Lista de Documentos";
}

<h1>DOCUMENTOS</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Subir Nuevo PDF</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Materia</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Descripción</th>
            <th>Bibliografía</th>
            <th>Archivo PDF</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Materia</td>
                <td>@item.Titulo</td>
                <td>@item.Autor</td>
                <td>@item.Descripcion</td>
                <td>@item.Bibliografia</td>
                <td>
                    <a asp-action="Descargar" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Descargar</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
